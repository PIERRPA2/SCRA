        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	var application = new GlideRecord("x_novrp_cr_application");
	if(!application.get("application", current.application)){
		return;
	}
	
	var updates = new GlideAggregate("x_novrp_cr_request");
	updates.addQuery("application", current.application);
	updates.addAggregate("SUM", "changes");
	updates.addAggregate("SUM", "findings");
	updates.addAggregate("SUM", "errors");
	updates.addAggregate("SUM", "recommendations");
	updates.groupBy("application");
	updates.query();
	
	if(updates.next()){
		application.changes = updates.getAggregate("SUM", "changes");
		application.findings = updates.getAggregate("SUM", "findings");
		application.errors = updates.getAggregate("SUM", "errors");
		application.recommendations = updates.getAggregate("SUM", "recommendations");
		application.update();
	}
})(current, previous);]]></script>
